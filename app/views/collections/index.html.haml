=render :partial => 'collections/list'

-unless @collections.count > 0 
  %h2 No Collections are visible. 
  =content_for :instructions do 
    -unless user_signed_in? 
      =form_for("user", :url => user_session_path, :html => {:id=> 'user_login'}) do |f| 
        %p 
          Try logging in: 

        %p 
          =f.label :login 
          %br 
          =f.text_field :login 
    
        %p 
          =f.label :password 
          %br
          =f.password_field :password 
      
        %p= f.submit "Sign in"
