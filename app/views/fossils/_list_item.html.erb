<strong><%= fossil.name %> </strong> – <%= fossil.description %> <br />
<%= link_to "Download #{fossil.attachment_file_name}", fossil.attachment.url %> – <%= fossil.attachment_file_size %> Bytes (<%= fossil.attachment_content_type %>) <br />
<% if can? :manage, fossil %>
  <%= link_to 'Edit', edit_fossil_path(fossil) %>
  <%= link_to 'Destroy', fossil, :confirm => 'Are you sure?', :method => :delete %>
<% end %>
