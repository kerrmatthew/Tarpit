<!DOCTYPE html>
%html
  %head
    %title
      Tarpit
    
    =stylesheet_link_tag :all 
    =javascript_include_tag :defaults 
    =csrf_meta_tag 
  %body
    #header
      #indexes
        =link_to_unless_current 'Collections', collections_path do  
          %span.current
            Collections
        
        -if can? :read, User
          =link_to_unless_current 'Users', admin_users_path do
            %span.current
              Users
      
      
        #meta
          =render 'devise/menu/registration_items'
          =render 'devise/menu/login_items'
      
      %p.notice
        =notice
        
      %p.alert
        =alert
      #clear  
    #main-container
      =yield
